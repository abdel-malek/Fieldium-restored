<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_bg"
    android:minHeight="300dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bluebrand.fieldium.view.other.CountriesActivity"
    tools:showIn="@layout/activity_countries">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/countries_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="start"
            android:text="@string/country_title"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/dark_gray" />

        <ImageButton
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@mipmap/exite"
            android:tint="@color/dark_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.5"
        android:gravity="center">

        <ListView
            android:layout_marginTop="5dp"
            android:id="@+id/countries_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/default_background"
            android:dividerHeight="2dp">

        </ListView>
        <!-- <ScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center"
             android:gravity="center">

             <LinearLayout
                 android:id="@+id/countries_buttons"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:gravity="center"
                 android:orientation="vertical"></LinearLayout>
         </ScrollView>-->
    </LinearLayout>
</LinearLayout>

