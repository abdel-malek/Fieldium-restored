        <item name="android:textColorPrimary">@color/color_primary_dark</item>&ndash;&gt;
      &lt;!&ndash;  <item name="android:windowTitleStyle">@style/test</item>&ndash;&gt;
        &lt;!&ndash;<item name="android:windowIsFloating">true</item>&ndash;&gt;
        &lt;!&ndash;  <item name="android:windowBackground">@null</item>&ndash;&gt;
       &lt;!&ndash; &ndash;&gt;<item name="android:windowFrame">@null</item>-->
    </style>

</resources>
